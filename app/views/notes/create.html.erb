<h4>Add a note</h4>
<%= form_for [@person, @note], remote: true, authenticity_token: true do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new note" %>
  </div>
  <%= f.submit "Submit Note", class: 'btn btn-default pull-right' %>
<% end %>
