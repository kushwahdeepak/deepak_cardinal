<section id="home" class="auto-init use-loading">
    <div class="divimage" style="width: 100%; height: 100%; background: white; background-size: cover;">
        <div class="hero-parallax">
            <div class="hero-inner">
                <div class="hero-content">
                    <div class="container">
              
                            <div style="width: 100%; float:left;" id="unlock_instructions">
                              <nav>
                                <div>
                                  
                                </div>
                              </nav>
                            </div><!--column-->
                            <div style="width: 100%; float: left;">
                              
                                  <div>
                                    <div class="row align-items-center">
                                      <div class="col">
                      
                                        <div class="space-40"></div>
                                        <div class="">
                                          <div class="row align-items-center">
                                            <div class="col">
                                              <h2>Resend unlock instructions</h2>

                                              <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
                                              <%= devise_error_messages! %>

                                              <div class="field">
                                                <%= f.label :email %><br />
                                                <%= f.email_field :email, autofocus: true %>
                                              </div>

                                              <div class="actions">
                                                <%= f.submit "Resend unlock instructions" %>
                                              </div>
                                              <% end %>

                                              <%= render "devise/shared/links" %>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                              
                            </div>
                  
                    </div>
              </div><!--hero content-->
          </div><!--hero inner-->
      </div><!--parallax hero-->
  </div><!--parallax image div-->
</section><!--intro section end-->
