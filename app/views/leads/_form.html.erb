<%= simple_form_for(@lead, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :device %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
