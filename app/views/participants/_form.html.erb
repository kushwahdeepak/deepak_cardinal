<%= simple_form_for(@participant, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :conversation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
