<%
  alternateFormText = alternateFormText || nil
  alternateFormURL = alternateFormURL || nil
  alternateFormHTML = alternateFormText ? "(or <a href=\"#{alternateFormURL}\">#{alternateFormText}</a>)" : ""
%>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card rounded mb-4 mt-4 shadow-sm">
        <div class="card-header bg-passive">
          <h1><%= title %></h1>

          <%= alternateFormHTML.html_safe %>
        </div>
        <div class="container p-3">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</div>