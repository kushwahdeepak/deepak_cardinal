<%= form_for @submitted_candidate, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend>Create a profile to track your application</legend>

    <div>
      <%= f.fields_for :user do |user| %>
          <%= render 'user_fields', f: user %>
      <% end %>
    </div>

    <div>
      <%= f.submit 'Next Step' %>
    </div>
  </fieldset>
<% end %>
